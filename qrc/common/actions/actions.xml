<prefix name="repository">
  <action name="create" accel="n" shortcut="Ctrl+Alt+Shift+N"/>
  <action name="&open" shortcut="Open"/>
  <action name="&save" shortcut="Save"/>
  <action name="save&As" shortcut="SaveAs"/>
  <action name="&close"  shortcut="Close" />
  <action name="con&figure" />
</prefix>

<prefix name="page">
  <action name="create" accel="s" shortcut="Ctrl-N" />
  <action name="create&Templated" />
  <action name="delete" />
  <action name="&edit" togglable="true" accel="" />
</prefix>

<prefix name="edition">
  <action name="undo" accel="" />
  <action name="redo" accel="" />
  <action name="cut" accel="" />
  <action name="copy" accel="" />
  <action name="paste" accel="" />
  <action name="pasteSpecial" accel="" />
  <action name="selectAll" accel="" />
</prefix>  

<prefix name="format">
  <prefix name="character">
    <action name="emphasis" accel="Italic" />
    <action name="strongEmphasis" accel="Bold" />
</prefix>

<prefix name="find">
  <action name="find" accel="Find" />
  <action name="replace" accel="Replace" />
  <action name="findNext" accel="FindNext" />
  <action name="findPrevious" accel="FindNext" />
</prefix>

<prefix name="app">
  <action name="viewPreferences" accel="" />
  <action name="quit" accel="" />
</prefix>

<prefix name="window">
  <action name="&fullscreen" togglable="true" shortcut="Preferences" />
  <action name="focusLocationBar" shortcut="Ctrl-L" /> 
</prefix>