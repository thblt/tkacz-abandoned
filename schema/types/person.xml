<entity name="person" root="true">
	
	<entity name="name" export="false">
		<data>
			<string name="surname" />
			<string name="middle_name" />
			<string name="von_part" />
			<string name="last_name" />
			<string name="suffix" />
			
			<string name="name" />
		</data>
		
		<options>
			<bool name="simple" default="false">
				<desc>Whether this name should not be formatted using the standard name mechanism. This applies to organizations names as well as some aliases.</desc>
			</bool>
		</options>
	</entity>
	
	<core.date></core.date> 

	<load src="./person.py" />

</entity>