<?xml version="1.0" encoding="UTF-8"?>
<actions locale="en">
	<prefix name="repository" description="Repository actions">
		<action name="create" shortcut="Ctrl+Alt+Shift+N">_New repository…</action>
		<action name="open" shortcut="Open">_Open…</action>
		<action name="save" shortcut="Save" inStates="modified">_Save</action>
		<action name="saveAs" shortcut="SaveAs">Save _as…</action>
		<action name="close" shortcut="Close">_Close</action>
		<action name="configure" role="NoRole" enterStates="configure">Configure repository</action>
		<action name="export">E_xport…</action>
	</prefix>

	<prefix name="page" description="Page actions">
		<prefix name="create" description="Create a page">
			<action name="simple" shortcut="New"  enterStates="page">S_imple</action>
			<action name="templated" enterStates="page">From _template…</action>
			<action name="popup" icon="simple"></action>
		</prefix>
		<action name="delete" inStates="page">Delete page</action>
		<action name="print" inStates="page" shortcut="Print">Print</action>

		<action name="categorize" inStates="page.edit" shortcut="Ctrl+K">Ca_tegorize
		</action>
	</prefix>

	<prefix name="collection" description="Collection actions">
		<prefix name="create" description="Create a collection">
			<action name="empty" shortcut="Meta+C">Empty</action>
			<action name="fromRules" shortcut="Meta+Shift+C">From current rules</action>
			<action name="withPages" shortcut="Meta+Ctrl+N">With currently visible pages
			</action>
		</prefix>
	</prefix>

	<prefix name="edition" description="General edition actions">
		<action name="undo" shortcut="Undo">_Undo</action>
		<action name="redo" shortcut="Redo">_Redo</action>
		<action name="cut" shortcut="Cut">_Cut</action>
		<action name="copy" shortcut="Copy">C_opy</action>
		<action name="paste" shortcut="Paste">_Paste</action>
		<action name="pasteSpecial" shortcut="Ctrl+Shift+V">Pa_ste special…</action>
		<action name="selectAll" shortcut="SelectAll">Select _all</action>
	</prefix>

	<prefix name="format">
		<prefix name="character">
			<action name="emphasis" shortcut="Italic">_Emphasis</action>
			<action name="strongEmphasis" shortcut="Bold">_Strong emphasis</action>
		</prefix>
		<prefix name="block">
			<action name="title1" shortcut="Italic">_Emphasis</action>
		</prefix>
	</prefix>

	<prefix name="search">
		<action name="find" shortcut="Find">_Find…</action>
		<action name="replace" shortcut="Replace">_Replace</action>
		<action name="findNext" shortcut="FindNext">Find _next</action>
		<action name="findPrevious" shortcut="FindPrevious">Find _previous</action>
	</prefix>

	<prefix name="app">
		<action name="about">About Tkacz</action>
		<action name="preferences" role="PreferencesRole">Preferences…</action>
		<action name="shConsole" magic="showhide">console</action>
		<action name="update" magic="aqua:inAppMenu" role="PreferencesRole">Check for updates…</action>
		<action name="quit" shortcut="Quit">_Quit</action>
		<action name="documentation" shortcut="HelpContents">Tkacz _documentation
		</action>
		<action name="reportbug">_Report a bug…</action>
	</prefix>

	<prefix name="window">
		<action name="fullscreen" togglable="true" shortcut="Ctrl+Shift+F"
			icon="simple">_Full screen</action>
		<action name="locationbar" shortcut="Ctrl+L"></action>
	</prefix>
</actions>